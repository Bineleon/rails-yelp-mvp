<div class='containter p-4'>
    <h1><%= @restaurant.name %></h1>
    <p>
      <strong>Address:</strong>
      <%= @restaurant.address %>
    </p>
    <p>
      <strong>Phone number:</strong>
      <%= @restaurant.phone_number %>
    </p>

    <h4>Add a review</h4>
    <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>


    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li><%= review.created_at&.strftime("%d %m %y") %> - <%= review.content %>
            <div class="col col-2">
              <%= review.rating %>
            </div>
      <% end %>
    </ul>

    <i class="fa-solid fa-rotate-left"></i><%= link_to "Back to restaurants", restaurants_path %>
</div>
